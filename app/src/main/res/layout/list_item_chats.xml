<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:state_focused="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/chat_all_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/images"
                    ></ImageView>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/chat_all_image"
                    android:layout_toLeftOf="@+id/chat_all_messenger_img">

                <TextView
                        android:id="@+id/chat_all_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sergey Kyst"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/last_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="Hello world\nHello world" />

            </LinearLayout>

            <ImageView
                    android:id="@+id/chat_all_messenger_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/tg_icon" />
            <TextView
                    android:id="@+id/chat_all_message_unread"
                    android:text="1"
                    android:textColor="@color/main_color"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"

                    android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>


